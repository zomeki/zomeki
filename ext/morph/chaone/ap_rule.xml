<ap_rule xmlns="http://www.unidic.org/chasen/ns/structure/1.0">

<!-- ***記述方法*** -->
<!-- 1. ruleは1つのcondと1つのthenからなる  -->
<!-- 2. condは条件式を1つだけもつ           -->
<!-- 3. 条件式で使用可能な要素は            -->
<!--    current, pre, and, or, not, default -->
<!-- 4. current, preは形態素に相当し、      -->
<!--    属性値を指定できる                  -->
<!-- 5. and, or, notは論理式で、            -->
<!--    属性を持たず、入れ子にできる        -->
<!-- 6. defaultは1つだけ指定する            -->
<!-- 7. thenは子要素を持たず、属性apの値に  -->
<!--    cont, new, aloneを指定する          -->

<!-- ***規則の優先順位*** -->
<!-- 競合する規則があった場合は、           -->
<!-- リスト上で先に出現したものが優先される -->

<!-- '？' の前は別のアクセント句に -->
<rule id="1" priority="50">
  <cond>
    <current orth="？"/>
  </cond>
  <then ap="new"/>
</rule>

<!--
if (m.silence)
  then /* 無音は一つのアクセント句 */
    new

if (pre.silence)
  then /* 無音の後は別のアクセント句に */
    new
-->

<!-- 句読点は単独のアクセント句に -->
<rule id="3-1" priority="48">
  <cond>
    <or>
      <current pos="補助記号-句点"/>
      <current pos="補助記号-読点"/>
    </or>
  </cond>
  <then ap="alone"/>
</rule>

<!-- 記号-括弧開 (「など) 、記号-括弧閉 (」など) は単独のアクセント句に -->
<rule id="3-2" priority="48">
  <cond>
    <or>
      <current pos="補助記号-括弧開"/>
      <current pos="補助記号-括弧閉"/>
    </or>
  </cond>
  <then ap="alone"/>
</rule>

<!-- 動詞-非自立は動詞の連用形，サ変可能名詞，接続助詞「て」「で」に接続する場合に前にくっつける -->
<rule id="4-1" priority="46">
  <cond>
    <and>
      <current pos="動詞-非自立可能"/>
      <or>
        <and>
          <pre pos="動詞"/>
          <pre cForm="連用形"/>
        </and>
        <pre pos="名詞-普通名詞-サ変可能"/>
        <and>
          <pre pos="助詞-接続助詞"/>
          <pre orth="て"/>
        </and>
        <and>
          <pre pos="助詞-接続助詞"/>
          <pre orth="で"/>
        </and>
      </or>
    </and>
  </cond>
  <then ap="cont"/>
</rule>

<!-- 形容詞-非自立は動詞の連用形や接続助詞「て」「で」に接続する場合に前にくっつける -->
<rule id="4-2" priority="46">
  <cond>
    <and>
      <current pos="形容詞-非自立可能"/>
      <or>
        <and>
          <pre pos="動詞"/>
          <pre cForm="連用形"/>
        </and>
        <and>
          <pre pos="形容詞"/>
          <pre cForm="連用形"/>
        </and>
        <and>
          <pre pos="助詞-接続助詞"/>
          <pre orth="て"/>
        </and>
        <and>
          <pre pos="助詞-接続助詞"/>
          <pre orth="で"/>
        </and>
      </or>
    </and>
  </cond>
  <then ap="cont"/>
</rule>

<!-- 接尾辞の後の名詞は別のアクセント句に -->
<rule id="5" priority="44">
  <cond>
    <and>
      <pre pos="接尾辞"/>
      <current pos="名詞"/>
    </and>
  </cond>
  <then ap="new"/>
</rule>

<!-- 付属語の後の自立語は別のアクセント句に -->
<rule id="6" priority="42">
  <cond>
    <and>
      <or>
        <pre pos="助動詞"/>
        <pre pos="助詞"/>
      </or>
      <not>
        <current pos="助動詞"/>
      </not>
      <not>
        <current pos="助詞"/>
      </not>
    </and>
  </cond>
  <then ap="new"/>
</rule>

<!-- 付属語は前にくっつける -->
<rule id="7" priority="40">
  <cond>
    <or>
      <current pos="助動詞"/>
      <current pos="助詞"/>
    </or>
  </cond>
  <then ap="cont"/>
</rule>

<!-- 名詞-普通名詞-副詞可能 (すべて、など) は単独のアクセント句に -->
<rule id="8-1" priority="38">
  <cond>
    <pre pos="名詞-普通名詞-副詞可能"/>
  </cond>
  <then ap="new"/>
</rule>

<rule id="8-2" priority="38">
  <cond>
    <current pos="名詞-普通名詞-副詞可能"/>
  </cond>
  <then ap="new"/>
</rule>

<!-- 副詞、接続詞、連体詞は単独のアクセント句に -->
<rule id="9" priority="36">
  <cond>
    <or>
      <current pos="副詞"/>
      <current pos="接続詞"/>
      <current pos="連体詞"/>
    </or>
  </cond>
  <then ap="alone"/>
</rule>

<!-- 動詞の後に名詞がきたら別のアクセント句に -->
<rule id="10" priority="34">
  <cond>
    <and>
      <pre pos="動詞"/>
      <current pos="名詞"/>
    </and>
  </cond>
  <then ap="new"/>
</rule>

<!-- 動詞の後に形容詞、形状詞がきたら別のアクセント句に -->
<rule id="11" priority="32">
  <cond>
    <and>
      <pre pos="動詞"/>
      <or>
        <current pos="形容詞"/>
        <current pos="形状詞"/>
      </or>
    </and>
  </cond>
  <then ap="new"/>
</rule>

<!-- 形容詞、形状詞の後に名詞がきたら別のアクセント句に -->
<rule id="12" priority="30">
  <cond>
    <and>
      <or>
        <pre pos="形容詞"/>
        <pre pos="形状詞"/>
      </or>
      <current pos="名詞"/>
    </and>
  </cond>
  <then ap="new"/>
</rule>

<!-- 名詞の連続はくっつける -->
<rule id="13" priority="28">
  <cond>
    <and>
      <pre pos="名詞"/>
      <current pos="名詞"/>
    </and>
  </cond>
  <then ap="cont"/>
</rule>

<!--
if (pre_ketsugou == AF_P3)
  then /* 分離型 (各、反、前、など) は単独のアクセント句に */
    new
-->

<!-- 未知語の連続はくっつける -->
<rule id="15" priority="24">
  <cond>
    <and>
      <pre pos="未知語"/>
      <current pos="未知語"/>
    </and>
  </cond>
  <then ap="cont"/>
</rule>

<!-- デフォルト -->
<rule id="16" priority="0">
  <cond>
    <default/>
  </cond>
  <then ap="cont"/>
</rule>

</ap_rule>
