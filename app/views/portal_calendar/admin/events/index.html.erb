<%= render :partial => 'search' %>

<table class="index">

  <tr>
    <th style="width: 60px; text-align: center;">詳細</th>
    <th style="width: 60px; text-align: right;">ID</th>
    <th style="width: 100px; text-align: center;">開始日</th>
    <th style="width: 100px; text-align: center;">終了日</th>
    <th style="width: 60px; text-align: right;">ジャンル</th>
    <th style="width: 60px; text-align: right;">ステータス</th>
    <th style="width: ;">イベント名</th>
    <th style="width: 120px; text-align: center;">作成日時</th>
    <th style="width: 60px; text-align: center;">状態</th>
  </tr>

  <% for item in @items %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td style="text-align: center;"><%= link_to :show, url_for(:action => :show, :id => item) %></td>
    <td style="text-align: right;"><%= item.id %></td>
    <td style="text-align: center;"><%= item.event_start_date %></td>
    <td style="text-align: center;"><%= item.event_end_date %></td>
    <td style="text-align: right;"><%= item.get_genre_title %></td>
    <td style="text-align: right;"><%= item.get_status_title %></td>
    <td><%= item.title %></td>
    <td style="text-align: center;"><%= safe{item.created_at.strftime("%Y-%m-%d %H:%M")} %></td>
    <td style="text-align: center;"><%= item.status.name %></td>
  <% end %>

</table>

<%= paginate @items %>
