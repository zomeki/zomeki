<div class="calendarEvents calendarTodayEvents">
  <h2><%=i18n_l @today, :default_ja %></h2>

  <table>
    <%- @events.each do |event| -%>
    <tr>
      <td>
        <%- if event.files.empty? -%>
          No Photo
        <%- else -%>
          <%- event.files.each do |file| next unless file.image_file? -%>
          <%= image_tag "#{@node.public_uri}#{event.id}_#{url_encode event.name}/file_contents/#{file.escaped_name}", width: 200 %><br />
          <%- end -%>
        <%- end -%>
      </td>
      <td>
        <%- if event.started_on == event.ended_on -%>
          <%=i18n_l event.started_on, :long_ja %>
        <%- else -%>
          <%=i18n_l event.started_on, :long_ja %> ï½ž <%=i18n_l event.ended_on, :long_ja %>
        <%- end -%>
      </td>
      <td>
        <h3><%= link_to_if event.href.present?, event.name, event.href, target: event.target %> <%= event.categories.map(&:title).join(', ') %></h3>
        <p><%=simple_format event.description %></p>
      </td>
    </tr>
    <%- end -%>
  </table>

  <%- unless @content.categories.empty? -%>
  <div class="categories">
    <%- @content.categories.each do |category| -%>
    <span><%= link_to category.title, "?c=#{category.id}" %></span>
    <%- end -%>
  </div>
  <%- end -%>
<!-- end .calendarEvents --></div>
