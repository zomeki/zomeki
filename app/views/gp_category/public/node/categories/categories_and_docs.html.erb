<div class="contentGpCategoryCategoryType">
  <%- unless @category.public_children.empty? -%>
  <section class="categoryType categories">
    <h2><%= @category.title %></h2>
    <nav>
      <ul>
        <%- @category.public_children.each do |child| -%>
        <li class="category<%= child.name.try(:camelize) %>"><%= link_to child.title, child.public_uri %></li>
        <%- end -%>
      </ul>
    </nav>
  </section>
  <%- end -%>

  <%- unless @docs.empty? -%>
  <section class="categoryType docs">
    <h2>記事</h2>
    <ul>
      <%- @docs.each do |doc| -%>
      <li><%= render 'doc', doc: doc %></li>
      <%- end -%>
    </ul>
  </section>
  <%- end -%>

  <%= paginate @docs %>
</div>
