<div class="contentPortalArticleTags">

<%= form_tag @base_uri, :method => :post, :class => 'search' do %>
<table>
  <tr>
    <th>タグ</th>
    <td><%= text_field_tag 's_tag', @tag, :style => 'width: 200px;' %></td>
    <td class="submitters">
      <%= submit_tag '検索',     :name => :search, :class => "send" %>
      <%= submit_tag 'リセット', :name => :reset, :class => "reset" %>
    </td>
  </tr>
</table>
<!-- end .search --><% end %>

<%if @tag.to_s != '' %>
<div class="hit">
  <span class="label">検索結果</span><span class="count"><%= "#{@docs.total_entries}" %></span><span class="unit">件</span></div>
<% end %>

<%= portal_article_docs_view @docs, @content.setting_value(:docs_list_type) %>

<%= paginate @docs %>

</div>
