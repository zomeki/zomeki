<table class="show">
  <tr>
    <th>ファイル名</td>
    <td><%= @item.name %></td>
  </tr>
  <% if @item.file? %>
  <tr>
    <th>ファイル種別</td>
    <td><%= @item.mime_type %></td>
  </tr><tr>
    <th>サイズ</td>
    <td><%= number_format(@item.size) %> Bytes</td>
  </tr>
  <% end %>
  <tr>
    <th>更新日時</td>
    <td><%= safe{@item.updated_at.strftime('%Y-%m-%d %H:%M')} %></td>
  </tr>
</table>
  
<% if @item.textfile? %>
<table class="show">
  <tr>
    <th>内容</td>
  </tr><tr>
    <td class="pre monospace"><%= @item.body %></td>
  </tr>
</table>
<% end %>

